{% extends "layout.html.j2" %}
{% set no_link = True %}

{% block content %}
<form class="justify-content-center row" action="/search" method="get">
    <div class="form-row">
        <div class="form-group col-md-8">
            <input class="form-control" type="search" placeholder="Search" name="query" aria-label="Search">
        </div>
        <div class="form-group col-md-4">
            <button class="btn btn-primary btn-block" type="submit">Search &raquo;</button>
        </div>
    </div>
</form>

<p class="text-center">
    <a href="index-static.html">View Index</a>
</p>
<p class="text-center">
    <a href="https://apps.fedoraproject.org/">Back to Fedora Apps &crarr;</a>
</p>
{% endblock %}

{% block footer %}
<div>Last refreshed on {{ date }} ({{ package_count }} packages).</div>
<div>Sources on <a href="https://pagure.io/fedora-packages-static">Pagure</a>.</div>
{% endblock %}
