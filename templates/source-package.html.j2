{% extends "layout.html.j2" %}
{% set link_prefix = "../../" %}
{% set full_header = True %}
{% set meta_description = "View the " ~ name ~ " packages in Fedora." %}

{% block title %}{{ name }} - Fedora Packages{% endblock %}

{% block content %}
<h1>Source Package {{ name }}</h1>

<ul class="list-group list-group-horizontal-lg mb-3">
	<li class="list-group-item w-100">
		<a href="http://koji.fedoraproject.org/koji/search?match=glob&type=package&terms={{ name }}" class="icon i-koji">
			Builds
		</a>
	</li>
	<li class="list-group-item w-100">
		<a href="https://bodhi.fedoraproject.org/updates/?packages={{ name }}" class="icon i-bodhi">
			Updates
		</a>
	</li>
	<li class="list-group-item w-100">
		<a href="https://bugzilla.redhat.com/buglist.cgi?component={{ name }}&query_format=advanced&product=Fedora&bug_status=NEW&bug_status=ASSIGNED&bug_status=REOPENED" class="icon i-bugzilla">
			Bugs
		</a>
	</li>
	<li class="list-group-item w-100">
		<a href="https://src.fedoraproject.org/rpms/{{ name }}" class="icon i-git">
			Sources
		</a>
	</li>
	<li class="list-group-item w-100">
		<a href="https://retrace.fedoraproject.org/faf/problems/?component_names={{ name }}" class="icon i-abrt">
			Crash Reports
		</a>
	</li>
	<li class="list-group-item w-100">
		<a href="https://koschei.fedoraproject.org/package/{{ name }}" class="icon i-koschei">
			Koschei
		</a>
	</li>
</ul>

<div>
  <h2>Subpackages</h2>
  <ul>
    {% if name in children %}
    <li><b><a href="./{{ name }}">{{ name }}</a></b> - {{ children[name]['summary'] }}</li>
    {% endif %}
    {% for child in children %}
    {% if children[child].name != name %}
    <li><a href="./{{ children[child].name }}">{{ children[child].name }}</a> - {{ children[child].summary }}</li>
    {% endif %}
    {% endfor %}
  </ul>
</div>
{% endblock %}
